{
  "name": "kampala-community-centers-platform",
  "version": "1.0.0",
  "description": "Community Centers Platform for Kampala - Full Stack Application",
  "main": "backend/dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite",
    "dev:backend": "cd backend && nodemon src/server.ts",
    "build": "echo 'API deployment complete'",
    "build:backend": "cd backend && tsc",
    "build:frontend": "tsc && vite build",
    "build:frontend:production": "tsc && vite build --mode production && cp .htaccess dist/",
    "build:production": "npm run build:backend && npm run build:frontend",
    "vercel-build": "cd backend && npm install && npx prisma generate && npx prisma db push",
    "start": "cd backend && npm start",
    "postinstall": "cd backend && npm install && npx prisma generate",
    "db:generate": "cd backend && prisma generate",
    "db:push": "cd backend && prisma db push",
    "db:migrate": "cd backend && prisma migrate deploy",
    "db:seed": "cd backend && tsx src/utils/seed.ts",
    "lint": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "deploy": "npm run db:migrate && npm run start"
  },
