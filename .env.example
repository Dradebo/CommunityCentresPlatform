# Community Centers Platform Environment Variables

# Frontend Configuration (Vite requires VITE_ prefix)
VITE_API_URL="http://localhost:3001/api"

# For production deployment, update VITE_API_URL to:
# VITE_API_URL="https://your-railway-backend-url.railway.app/api"

# Backend Environment Variables (for development)
# These will be set in Railway dashboard for production

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/kampala_centers"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration
FRONTEND_URL="http://localhost:3000"

# Optional: File Upload Configuration
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE="5242880"